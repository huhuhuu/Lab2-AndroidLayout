<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <Button
        android:id="@+id/btn_toLinearLayout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/referToLinearLayout"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:layout_marginTop="70dp"
        />
    <Button
        android:id="@+id/btn_toConstraintLayout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/referToConstraintLayout"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_toLinearLayout"
        android:layout_marginTop="70dp"
        />
    <Button
        android:id="@+id/btn_toTableLayout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/referToTableLayout"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:layout_below="@id/btn_toConstraintLayout"
        android:layout_marginTop="70dp"
        />
</RelativeLayout>